[user]
  name = tim.nolte
  email = tim.nolte@ndigitals.com
[push]
  default = simple
[core]
  excludesfile = ~/.cvsignore
[color]
  ui = auto
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
  tool = vimdiff
[difftool]
  prompt = false
