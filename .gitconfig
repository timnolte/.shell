[push]
  default = simple
	followTags = false
[core]
  excludesfile = ~/.cvsignore
[color]
	ui = true
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[alias]
	pull-rebase = pull --single-branch --rebase=preserve
[commit]
	gpgsign = true
[gpg]
	program = gpg2
